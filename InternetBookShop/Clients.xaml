<Page x:Class="InternetBookShop.Clients"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InternetBookShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Clients">

    <Grid>
        <DataGrid x:Name="ClientData" HorizontalAlignment="Left" Height="322" Margin="29,28,0,0" VerticalAlignment="Top" Width="734">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding client_id}" Width="40"></DataGridTextColumn>
                <DataGridTextColumn Header="Имя" Binding="{Binding name}" Width="100"></DataGridTextColumn>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding surname}" Width="100"></DataGridTextColumn>
                <DataGridTextColumn Header="Отчество" Binding="{Binding patronymic}" Width="100"></DataGridTextColumn>
                <DataGridTextColumn Header="email" Binding="{Binding email}" Width="120"></DataGridTextColumn>
                <DataGridTextColumn Header="телефон" Binding="{Binding phone}" Width="80"></DataGridTextColumn>
                <DataGridTextColumn Header="пол" Binding="{Binding gender}" Width="40"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
